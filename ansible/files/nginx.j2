server {
    listen 8000 default_server;
    server_name {{ server_name }};

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /home/johnson/app;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/home/johnson/app.sock;
    }
}
